# Event Streaming Service Configuration

# Kafka
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=video-platform-events
KAFKA_GROUP_ID=event-processors

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Database
DATABASE_URL=postgresql://video_user:video_password@localhost:5432/video_platform

# Topics
TOPIC_VIDEO_VIEWS=video.views
TOPIC_VIDEO_LIKES=video.likes
TOPIC_VIDEO_DISLIKES=video.dislikes
TOPIC_COMMENTS=video.comments
TOPIC_SUBSCRIPTIONS=channel.subscriptions
TOPIC_VIDEO_ANALYTICS=video.analytics
TOPIC_USER_ACTIVITY=user.activity

# Processing
BATCH_SIZE=100
BATCH_TIMEOUT=5000
COUNTER_FLUSH_INTERVAL=30000

# Logging
LOG_LEVEL=info
