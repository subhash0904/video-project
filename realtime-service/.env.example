# Realtime Service Configuration
PORT=4100
NODE_ENV=development

# JWT
JWT_SECRET=change-me-in-production-jwt-secret-32chars

# Redis (for Socket.io adapter and pub/sub)
REDIS_HOST=localhost
REDIS_PORT=6379

# Kafka (for consuming events)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=realtime-service
KAFKA_GROUP_ID=realtime-consumers

# Topics to subscribe
TOPIC_VIDEO_VIEWS=video.views
TOPIC_VIDEO_LIKES=video.likes
TOPIC_COMMENTS=video.comments
TOPIC_SUBSCRIPTIONS=channel.subscriptions
TOPIC_LIVE_CHAT=live.chat

# CORS
FRONTEND_URL=http://localhost

# Logging
LOG_LEVEL=info
