# Server Configuration
NODE_ENV=development
PORT=4000
API_URL=http://localhost:4000

# Database
DATABASE_URL="postgresql://video_user:video_password@localhost:5432/video_platform?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this
REFRESH_TOKEN_EXPIRES_IN=30d

# Email (Optional - for later)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@videoplatform.com

# Storage (Local for now, S3 later)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5368709120
# 5GB max upload

# Streaming
HLS_OUTPUT_DIR=../streaming/hls
STREAMING_BASE_URL=http://localhost:8080/hls

# ML Service
ML_SERVICE_URL=http://localhost:5000

# Frontend URL (CORS)
FRONTEND_URL=http://localhost:5173

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
# minutes
RATE_LIMIT_MAX=100
# requests per window
