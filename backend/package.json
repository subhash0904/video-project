{
  "name": "backend",
  "version": "1.0.0",
  "description": "Video platform backend",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "node --import tsx/esm src/server.ts",
    "dev:watch": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:generate": "node node_modules/prisma/build/index.js generate",
    "db:push": "node node_modules/prisma/build/index.js db push",
    "db:migrate": "node node_modules/prisma/build/index.js migrate dev",
    "db:studio": "node node_modules/prisma/build/index.js studio",
    "db:seed": "node node_modules/tsx/dist/cli.mjs prisma/seed-production.ts",
    "db:seed:simple": "node node_modules/tsx/dist/cli.mjs prisma/seed.ts",
    "postinstall": "node node_modules/prisma/build/index.js generate || echo 'Prisma generation will happen later'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "video",
    "streaming",
    "platform"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.29.1",
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.6",
    "dotenv": "^16.4.7",
    "express": "^5.2.1",
    "express-validator": "^7.2.1",
    "fluent-ffmpeg": "^2.1.3",
    "ioredis": "^5.4.2",
    "jsonwebtoken": "^9.0.3",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.8.3",
    "winston": "^3.18.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.6",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.12",
    "@types/node": "^25.2.2",
    "bcryptjs": "^3.0.3",
    "prisma": "^6.5.0",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
