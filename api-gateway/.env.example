# API Gateway Configuration
PORT=3000
NODE_ENV=development

# JWT
JWT_SECRET=change-me-in-production-jwt-secret-32chars

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Service Discovery
SERVICE_REGISTRY_ENABLED=true

# Microservices URLs
USER_SERVICE_URL=http://user-service:4001
VIDEO_SERVICE_URL=http://video-service:4002
RECOMMENDATION_SERVICE_URL=http://recommendation-service:4003
COMMENT_SERVICE_URL=http://comment-service:4004
LIKE_SERVICE_URL=http://like-service:4005
SUBSCRIPTION_SERVICE_URL=http://subscription-service:4006
ANALYTICS_SERVICE_URL=http://analytics-service:4007

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Circuit Breaker
CIRCUIT_BREAKER_TIMEOUT=3000
CIRCUIT_BREAKER_ERROR_THRESHOLD=50
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Geo-DNS Configuration
REGION=us-west
NEARBY_REGIONS=us-east,eu-west,asia-south
