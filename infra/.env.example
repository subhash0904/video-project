# Video Platform - Production Environment Variables
# Copy this file to .env and update values before deployment

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_USER=video_user
POSTGRES_PASSWORD=change-me-strong-password-here
POSTGRES_DB=video_platform

# =============================================================================
# SECURITY (⚠️ CHANGE ALL OF THESE IN PRODUCTION!)
# =============================================================================
JWT_SECRET=change-me-in-production-use-a-32-char-secret-minimum
REFRESH_TOKEN_SECRET=change-me-in-production-use-another-32-char-secret
ENCRYPTION_SECRET=change-me-encryption-secret-minimum-32-characters

# =============================================================================
# GOOGLE OAUTH (Get from Google Cloud Console)
# =============================================================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:4000/api/auth/google/callback

# =============================================================================
# FRONTEND & WEBSOCKET URLS (Update for production/GCP)
# =============================================================================
FRONTEND_URL=http://localhost
VITE_WS_URL=ws://localhost:4100

# =============================================================================
# OPTIONAL: GCP DEPLOYMENT
# =============================================================================
# REGION=us-central1
# APP_NAME=Video Platform

# =============================================================================
# OPTIONAL: Override ports (defaults shown)
# =============================================================================
# BACKEND_PORT=4000
# FRONTEND_PORT=80
# REALTIME_PORT=4100
